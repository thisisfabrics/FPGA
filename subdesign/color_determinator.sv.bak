module color_determinator(
	input [2:0][11:0] intersection_location,
	input is_intersecting,
	output logic [3:0] red,
	output logic [4:0] green,
	output logic [5:0] blue
);

always_comb
	if (is_intersecting) begin
		red = 1;
		green = 0;
		blue = 0;
	end else begin
		red = 0;
		green = 0;
		blue = 0;
	end
	
endmodule
